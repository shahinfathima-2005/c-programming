#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    int i;
    double a,b,c;
    scanf("%d",&i);
    if (i<15000)
    {
        a= 0.15*i;
        b= 0.90*i;
    }
    else
    {
        a=5000;
        b=0.98 *i;
    }
        c=i+a+b;
    printf("%.2lf\n",c);
    
    return 0;
}

    
    
